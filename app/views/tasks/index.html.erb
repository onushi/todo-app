<h1>タスク一覧</h1>
<table>
    <thead>
        <tr>
            <th>タスク名</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= task.name %></td>
            <td><%= link_to '詳細', task_path(task) %></td>
            <td><%= link_to '編集', edit_task_path(task) %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= link_to '追加', new_task_path %>